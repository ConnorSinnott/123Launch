<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

    <TextView
        android:id="@+id/activity_appearance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="Highlight Color"/>


    <include
        android:id="@+id/activity_appearance_list_item"
        layout="@layout/list_item_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_appearance_text_view"
        />

    <View
        android:id="@+id/activity_appearance_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/activity_appearance_list_item"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/activity_appearance_button_save"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>