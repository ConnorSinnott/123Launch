<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.pluviostudios.dialin"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".configManagerActivity.ConfigurationManagerActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".buttonsActivity.ButtonsActivity"
            >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        <activity android:name=".appearanceActivity.AppearanceActivity"/>

        <provider
            android:name=".database.DBContentProvider"
            android:authorities="com.pluviostudios.dialin.app"
            android:exported="false"
            android:syncable="true"/>

        <!-- 1x4 Widget BaseWidgetProvider -->
        <receiver
            android:name=".widget.SupportedWidgetSizes$Widget4x1Provider"
            android:label="123Go x4">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_4x1_info"/>
        </receiver>

        <!-- 1x5 Widget BaseWidgetProvider -->
        <receiver
            android:name=".widget.SupportedWidgetSizes$Widget5x1Provider"
            android:label="123Go x5">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_5x1_info"/>
        </receiver>

        <!-- 1x4 Vertical Widget BaseWidgetProvider -->
        <receiver
            android:name=".widget.SupportedWidgetSizes$Widget4x1VerticalProvider"
            android:label="123Go x4 Vertical">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_4x1_vertical_info"/>
        </receiver>

        <!-- 1x5 Vertical Widget BaseWidgetProvider -->
        <receiver
            android:name=".widget.SupportedWidgetSizes$Widget5x1VerticalProvider"
            android:label="123Go x5 Vertical">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_5x1_vertical_info"/>
        </receiver>

        <receiver
            android:name=".widget.WidgetReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="123GoIntent"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </receiver>

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
    </application>

</manifest>